.nav-header {
  height 60px;
  background white;
  position relative;

  .nav-item-header {
    position absolute;
    border-radius: 4px;
    padding: 0.65rem 1.1rem;
    cursor pointer;
    top: 50%;
    transform translate(0, -50%);
    color: #6c7293;
    font-weight: 500;
    font-size 13px;
    transition all .2s;

    &.user-nav {
      right 15px;

      .dropdown-item-wrapper {
        right: 0;
        width: 150px;
        left inherit;
      }
    }

    &.premises {
      left 15px;
    }

    &:hover {
      background-color: #f0f3ff;
      color: #536be2;
    }

    &.active {
      background-color: #f0f3ff;
      color: #536be2;
    }

    .fa-angle-down {
      padding-left: 7px;
    }

    .dropdown-item-wrapper {
      position absolute;
      box-shadow: 0px 0px 50px 0px rgba(82, 63, 105, 0.15);
      top: calc(100% + 10px);
      width 250px;
      left: 0;
      font-size: 12px;
      background white;

      .dropdown-item {
        padding: 0.7rem 1.2rem;
        color: #646c9a;
        transition: all 0.2s;
        display block;


        &:hover {
          color: #5d78ff;
          background-color: #f8f9fa;
        }
      }
    }
  }
}