.nav-header {
  height 60px;
  background white;
  position relative;


  &.mobile {
    .premises {
      right: 55px;
      left initial !important;

      .dropdown-item-wrapper {
        right: 0;
        left: initial !important;
      }
    }

    .user-nav {
      right: 0 !important;
      .fa-user-circle-o {
        font-size 22px;
      }
    }
  }


  .nav-item-header {
    position absolute;
    border-radius: 4px;
    padding: 0.65rem 1.1rem;
    cursor pointer;
    top: 50%;
    transform translate(0, -50%);
    color: #6c7293;
    font-weight: 500;
    font-size 13px;
    transition all .2s;
    z-index 12px;

    &.menu-btn {
      left 0;
      font-size 22px;
    }


    &.user-nav {
      right 15px;

      .dropdown-item-wrapper {
        right: 0;
        width: 150px;
        left inherit;
      }
    }

    &.premises {
      left 15px;
    }

    &:hover {
      background-color: #f0f3ff;
      color: #536be2;
    }

    &.active {
      background-color: #f0f3ff;
      color: #536be2;
    }

    .fa-angle-down {
      padding-left: 7px;
    }

    .dropdown-item-wrapper {
      position absolute;
      box-shadow: 0px 0px 50px 0px rgba(82, 63, 105, 0.15);
      top: calc(100% + 10px);
      width 250px;
      left: 0;
      font-size: 12px;
      background white;

      .dropdown-item {
        padding: 0.7rem 1.2rem;
        color: #646c9a;
        transition: all 0.2s;
        display block;


        &:hover {
          color: #5d78ff;
          background-color: #f8f9fa;
        }
      }
    }
  }
}

.app-modal-fade-enter {
  .left-sidebar {
    transform: translateX(-100%);
  }
}

.app-modal-fade-enter.app-modal-fade-enter-active {
  .left-sidebar {
    transition: transform .3s ease-out,-webkit-transform .3s ease-out;
    transform: translateX(0);
  }
}

.app-modal-fade-exit {
  .left-sidebar {
    transform: translateX(0);
  }
}

.app-modal-fade-exit.app-modal-fade-exit-active {
  .left-sidebar {
    transition: transform .3s ease-out,-webkit-transform .3s ease-out;
    transform: translate(-100%);
  }
}

