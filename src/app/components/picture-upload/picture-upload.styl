.picture-upload {
  margin-bottom 24px;
  display flex;
  position relative;

  &.has-error {
    .label {
      color danger;
    }


  }

  .input-upload {
    display none;
  }

  .label {
    margin-right 18px;
    color: #607d8b;
    font-size: 14px;
    padding-top: 5px;
  }


  .image-wrapper {
    height 120px;
    width 120px;
    position relative;
    border: 3px solid #ffffff;
    box-shadow 0px 0px 13px 0px rgba(0, 0, 0, 0.1);
    border-radius 4px;
    background: #f9f9fc;


    .btn-primary {
      position absolute;
      top: -15px;
      right: -15px;
      border-radius 50%;
      box-shadow 0px 0px 13px 0px rgba(0, 0, 0, 0.1);
      width: 30px;
      height: 30px;
      padding: 0;
    }
  }


  .error {
    position absolute;
    font-size: 10px;
    bottom: -15px;
    color danger;
  }
}