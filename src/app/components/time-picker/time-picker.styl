.time-picker {
  .input-picker {
    display inline-block;
    position relative;

    &:first-child {
      padding-right 5px;
    }

    &:last-child {
      padding-left 5px;
    }

    .form-control {
      text-align center;
    }

    i {
      cursor pointer;
      font-size 24px;
      color #5e72e4;
      font-weight bold;
    }

    .fa-angle-up {
      position absolute;
      top: 0;
      left 50%;
      transform translate(-50%, 0);
    }

    .fa-angle-down {
      bottom 0;
      position absolute;
      left 50%;
      transform translate(-50%, 0);
    }

    .form-control {
      width 50px;
    }
  }
}