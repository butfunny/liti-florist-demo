.date-picker {

  position relative;

  .calender-button {
    position absolute;
    width 38px;
    height 38px;
    cursor pointer;
    background white;
    border-left: solid 1px #d1d7e2;
    border-top-right-radius 2px;
    border-bottom-right-radius 2px;
    text-align center;
    font-size 16px;
    line-height 40px;
    top: 1px;
    right: 1px;
    transition background .2s;

    &:hover {
      background: #f4f5f8;
    }
  }

  .datepicker-dropdown {
    position: absolute;
    display: block;
    top: 100%;
    z-index: 100;
    box-shadow 0px 0px 50px 0px rgba(82, 63, 105, 0.15);
    background white;
    padding 10px;


    .table-condensed {

      tr {
        th {
          text-align: center;
          width: 35px;
          height: 30px;
          border-radius: 4px;
          border: none;
          cursor pointer;
          font-weight: 500;
          transition background .2s;
          font-size 13px;
          color: #a1a8c3;

          &.dow {
            cursor initial;
            &:hover {
              background white;
            }
          }

          &:hover {
            background: #f7f8fa;
          }

          &.datepicker-switch {

          }
        }

        td {
          text-align: center;
          width: 35px;
          height: 30px;
          border-radius: 4px;
          border: none;
          font-weight: 400;
          transition background .2s;
          font-size 13px;
          color: #646c9a;
          cursor pointer;

          &.active {
            background: #5d78ff;
            color white;

            &:hover {
              background: darken(#5d78ff, 10%);
            }
          }

          &.old {
            color: #c5cbe3;
          }

          &:hover {
            background: #f7f8fa;
          }
        }
      }
    }

    .datepicker-months {

      .datepicker-switch {
        width: 145px;
      }

      tr {
        td {

          &:hover {
            background: white !important;
          }

          span {
            display: block;
            width: 23%;
            height: 54px;
            line-height: 54px;
            float: left;
            margin: 1%;
            cursor: pointer;
            border-radius: 4px;
            transition background .2s;

            &.active {
              background: #5d78ff;
              color white;
            }

            &:hover {
              background: #f7f8fa;
            }
          }

        }
      }
    }
  }
}