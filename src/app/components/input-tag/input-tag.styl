.input-tag {
  display flex;
  flex-flow row wrap;
  position relative;
  margin-bottom 24px;
  width 100%;
  min-height 35px;
  border: solid 1px #d1d7e2;
  border-bottom 0;
  border-radius: 2px;

  .tag-item {
    position: relative;
    border-right: 1px solid #d1d7e2;
    border-bottom: 1px solid #d1d7e2;
    cursor pointer;
    color: black;
    padding-right: 30px;
    line-height: 33px;
    padding-left: 5px;
    font-size: 11px;
    background-color: #f7f8fa;
    font-weight: 500;
    transition background .2s;

    &:hover {
      background darken(#f7f8fa, 10%);
    }


    &.selected {
      background darken(#f7f8fa, 10%);
    }

    &.error-tag {
      border: 1px solid red;
    }

    .remove-tag {
      color: #585858;
      position: absolute;
      right: 5px;
      top: 0;
      font-size 15px;

    }
  }

  &.focus {
    .bar {
      &:before, &:after {
        width 50%;
      }
    }

    .label {
      top: 0;
      font-size: 11px;
      color: primary;
    }
  }

  &.has-value {
    .bar {
      &:before, &:after {
        width 50%;
      }
    }

    .label {
      top: 0;
      font-size: 11px;
    }
  }

  &.has-error {
    border-color danger !important;
  }

  .input-wrapper {
    flex 1;
    min-width 100px;
    border-bottom: 1px solid #d1d7e2;

    input {
      outline none;
      width 100%;
      height 100%;
      padding: 10px 5px;
      border: 0;
      font-size 14px;

    }
  }
  .bar {
    position absolute;
    background transparent;
    padding 0 5.5px;
    font-size: 11px;
    color transparent;
    top: -11px;
    left 11px;


    &:before, &:after {
      content: '';
      height: 100%;
      width: 0;
      position: absolute;
      background: white;
      transition: 0.2s ease all;
      top: 0;
    }

    &:before {
      left: 50%;
    }

    &:after {
      right: 50%;
    }
  }


  .label {
    color: #607d8b;
    font-size: 14px;
    position: absolute;
    pointer-events: none;
    top: 18px;
    left 16.5px;
    transform translate(0, -50%);
    transition: 0.2s ease all;
    z-index 2;
  }


  .dropdown-menu {
    top: calc(100% + 1px) !important;
    left: -1px !important;
    width: calc(100% + 2px) !important;
  }

}
