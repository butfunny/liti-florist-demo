.column-view-more {
  width 100%;
  position relative;

  .column-header {
    display inline-block;
  }

  .show-info {
    padding-left 5px;
    font-size 11px;
    color primary;
    cursor pointer;
  }

  .sub-text {
    margin-bottom 5px;
    font-size 12px;
    margin-top: 5px;
  }

  .info-wrapper {
    margin-top: 5px;
    font-size 12px;

    .info-item {
      margin-bottom 5px;
    }
  }
}