.loading-overlay {
  position absolute;
  z-index 1;
  background rgba(white, 0.5);
  width: 100%;
  height: 100%;

  text-align center;
  vertical-align middle;

  i.fa {
    position relative;
    color #b1b1b1;

    font-size 40px;
    top: calc(50% - 22px);
  }

  img {
    position absolute
    top calc(50%)
    left 50%
    transform translate(-50%, -50%)
  }
}

