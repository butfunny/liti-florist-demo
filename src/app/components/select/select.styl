.select {
  &.has-error {
    .select-text {
      border-color danger !important;
    }
  }

  &.focus {
    .select-text {
      border-color: primary;

      .sort-icon {
        color primary;
      }
    }
  }

  position relative;

  .select-text {
    width: 100%;
    padding: 0 15px;
    border-radius: 2px;
    border: solid 1px #d1d7e2;
    transition: .2s ease all;
    height: 35px;
    line-height: 35px;
    cursor: pointer;
    font-size: 14px;
    color: #262626;
    background white;

    .sort-icon {
      position: absolute;
      right: 15px;
      top: 50%;
      transform: translate(0, -50%);
    }
  }

  .select-dropdown {
    width: 100%;
    box-shadow: 0px 0px 13px 0px rgba(82, 63, 105, 0.05);
    position absolute;
    background white;
    top: 100%;
    left 0;
    font-size: 12px;
    z-index 10;
    max-height 200px;
    overflow auto;
    border: 1px solid #d1d7e2;
    border-top: 0;
    border-bottom-left-radius 2px;
    border-bottom-right-radius 2px;

    .dropdown-item {
      padding: 0.7rem 1.2rem;
      color: #646c9a;
      transition: all 0.2s;
      display block;
      cursor pointer;

      &.active {
        color: #5d78ff;
      }

      &:hover {
        color: #5d78ff;
        background-color: #f8f9fa;
      }
    }
  }


}