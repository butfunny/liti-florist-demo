.checkbox {
  position relative;
  padding-left 30px;


  label {
    cursor pointer;
  }

  .checkbox-value {
    transition: all .2s;
    border: 1px solid #d1d7e2;
    width: 18px;
    height: 18px;
    background white;
    position absolute;
    cursor pointer;
    left 0;
    top: 3px;
    border-radius 3px;

    &.checked {

      border-color #5d78ff;

      .fa-check {
        display inline;
      }
    }

    .fa-check {
      display none;
      position absolute;
      font-size 11px;
      top: 50%;
      left 50%;
      transform translate(-50%, -50%);
      color: primary;
    }
  }
}