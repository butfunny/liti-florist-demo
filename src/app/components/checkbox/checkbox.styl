.checkbox {
  position relative;
  padding-left 30px;


  label {
    cursor pointer;
  }

  .checkbox-value {
    transition: all .2s cubic-bezier(.68,-.55,.265,1.55);
    border: 1px solid #cad1d7;
    width: 1.25rem;
    height: 1.25rem;
    background white;
    position absolute;
    cursor pointer;
    left 0;
    top: 3px;

    &.checked {
      background #5e72e4;

      .ni {
        display inline;
      }
    }

    .ni {
      display none;
      position absolute;
      font-size 15px;
      top: 50%;
      left 50%;
      transform translate(-50%, -50%);
      color white;
    }
  }
}