.button-group {
  display inline-block;
  padding: 5px 10px;
  background white;
  position relative;
  border: 1px solid #e1e1ef;
  border-radius 3px;
  cursor pointer;
  transition all .2s;


  &:hover {
    border-color: #ebedf2 !important;
    background-color: #f4f5f8 !important;
  }


  .button-dropdown {
    box-shadow: 0px 0px 50px 0px rgba(82, 63, 105, 0.15);
    position absolute;
    background white;
    font-size: 12px;
    z-index 10;
    top: calc(100% + 2px);
    right 0;
    min-width: 80px;

    .button-dropdown-item {
      padding: 0.7rem 1.2rem;
      color: #646c9a;
      transition: all 0.2s;
      display block;
      cursor pointer;
      .fa {
        padding-right 5px;
      }

      &:hover {
        color: #5d78ff;
        background-color: #f8f9fa;
      }
    }
  }

  .button-text {
    font-size 11px;
  }
}