.request-from-supplier {
  @media (min-width 769px) {
    .row {
      display flex;

      .col {
        width calc(50% - 12px);

        &:first-child {
          margin-right 12px;
        }

        &:last-child {
          margin-left 12px;
        }
      }
    }
  }

  .product-name {
    position relative;
    padding-left 25px;
    display: inline-block;

    img {
      height: 20px;
      width: 20px;

      border-radius: 3px;
      position: absolute;
      left: 0;
      top: 0;
    }
  }
}