.request-warehouse-route {
  .card-body {

    .button-group {
      padding: 8px 20px;

      .button-text {
        font-size 13px;
      }
    }

    .button-dropdown {
      right: inherit;
      left: 0;
      text-align: left;
      width auto;
    }
  }

  .button-dropdown {
    width 120px;
  }

  .info-item {
    font-size 11px;
    margin-top: 5px;
  }


  .product-name {
    position relative;
    padding-left 25px;
    display: inline-block;

    img {
      height: 20px;
      border-radius: 3px;
      position: absolute;
      left: 0;
      top: 0;
    }
  }
}