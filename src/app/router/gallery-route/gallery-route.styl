.gallery-route {

  .bill-item {
    border: 1px solid #dedede;
    border-radius: 3px;
    margin-bottom 10px;


    .image-header {
      img {
        width 100%;
      }
    }
  }

  .bill-body {
    padding 10px;
  }

}

.manage-gallery-modal {
  .product-name {
    position relative;
    padding-left 25px;
    display: inline-block;

    img {
      height: 20px;
      border-radius: 3px;
      position: absolute;
      left: 0;
      top: 0;
    }
  }

  .btn-remove {
    margin-top: 5px;
  }
}