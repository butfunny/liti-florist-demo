.products-route {

  .card-body-pagination {
    padding-top: 0;
  }

  .btn-excel {
    margin-top: 10px;
    text-decoration none;
  }

  .filter-wrapper {
    margin-top: 25px;

    @media (min-width 769px) {
      display flex;

      .filter-col {
        width calc(50% - 12px);

        .input-tag {
          margin-bottom 0;
        }

        &:first-child {
          margin-right 12px;
        }

        &:last-child {
          margin-left 12px;
        }
      }
    }
  }

  .product-name {
    position relative;
    padding-left 30px;

    img {
      height 25px;
      width 25px;
      border-radius 3px;
      position absolute;
      left 0;
      top: 0;
    }
  }
}