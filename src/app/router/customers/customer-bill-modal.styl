.customer-bill-modal {

  .modal-body {
    background: #ecf0f5;
    padding: 10px 5px;
    @media (min-width 769px) {
      padding: 24px;
    }
  }

  .timeline {
    position: relative;
    margin: 0 0 30px 0;
    padding: 0;
    list-style: none;
    font-size 13px;

    & > li {
      position: relative;
      margin-right: 10px;
      margin-bottom: 15px;

      &:before, &:after {
        content: " ";
        display: table;
      }

      & > span {
        font-weight: 600;
        padding: 5px;
        display: inline-block;
        border-radius: 4px;
        color white;
        background-color: #dd4b39
      }

      & > .fa {
        width: 30px;
        height: 30px;
        font-size: 15px;
        line-height: 30px;
        position: absolute;
        border-radius: 50%;
        text-align: center;
        left: 18px;
        top: 0;
        color white;
      }

      .timeline-item {
        border-radius: 3px;
        margin-top: 0;
        background: #fff;
        color: #444;
        margin-left: 60px;
        margin-right: 15px;
        padding: 0;
        position: relative;
        box-shadow: 0 1px 1px rgba(0, 0, 0, 0.1);
        margin-bottom 15px;

        .time {
          float: right;
          font-size: 12px;
          color black;
          padding: 10px;
        }

        .timeline-body, .timeline-footer {
          padding: 10px;
        }
      }
    }

    &:before {
      content: '';
      position: absolute;
      top: 0;
      bottom: 0;
      width: 4px;
      background: #ddd;
      left: 31px;
      margin: 0;
      border-radius: 2px;
    }
  }
}