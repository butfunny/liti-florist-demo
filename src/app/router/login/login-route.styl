.login-route {
  position: relative;
  height 100vh;
  margin: 0 24px;

  .error-login {
    font-size 13px;
  }

  .card-header {
    margin-bottom 24px;
  }

  .card-login {
    max-width: 500px;
    width calc(100% - 24px);
    box-shadow: 0px 0px 80px 0px rgba(77, 84, 124, 0.09);
    border-radius: 0.6rem;
    position absolute;
    top: 50%;
    left 50%;
    transform translate(-50%, -50%);
    padding 24px;


    .card-header {
      text-align center;
      font-size 20px;
    }
  }

  .text-center {
    margin-top: 42px;
  }

  .btn {
    width: 100%;
  }
}